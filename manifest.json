{
  "name": "AMA Logística",
  "short_name": "AMA",
  "id": "ama-logistica-app",
  "description": "Sistema de seguimiento de ubicación y nómina para logística",
  "start_url": "/app-trabajador/pasada.html",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "background_color": "#2563eb",
  "theme_color": "#2563eb",
  "icons": [
    {
      "src": "icono-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icono-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "lang": "es-CO",
  "dir": "ltr",
  "scope": "/app-trabajador/",
  "orientation": "portrait",
  "screenshots": [
    {
      "src": "screenshots/pantalla1.jpg",
      "sizes": "1080x1920",
      "type": "image/jpeg",
      "label": "Vista principal"
    }
  ],
  "categories": ["business", "productivity"],
  "file_handlers": [
    {
      "action": "/abrir-archivo",
      "accept": { "application/pdf": [".pdf"] }
    }
  ],
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+ama",
      "url": "/abrir-enlace?url=%s"
    }
  ]
}
